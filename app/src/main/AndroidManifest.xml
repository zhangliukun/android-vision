<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pyvision">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.ObjectDetection">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".helloworld.HelloworldActivity" />
        <activity android:name=".vision.VisionListActivity" />
        <activity android:name=".vision.ImageClassificationActivity" />
        <activity android:name=".mnist.MnistClassificationActivity" />
        <activity android:name=".cameraapi.cameratest.Camera2Activity" />
        <activity android:name=".colortransfer.ColorTransferActivity" />
        <activity android:name=".cameraapi.cameraX.CameraXActivity" />
        <activity android:name=".cameraapi.cameramix.DectorActivity" />
    </application>

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.location.gps" />

</manifest>